{{! Template for the frost-detail-tabs-more component }}

{{frost-button
  priority='secondary'
  size='small'
  icon='more-tabs'
  pack='frost-tabs'
  onClick=(action onClick)
  hook=(concat hookPrefix '-tab')
  register=(action '_register')
  selectedTab=selectedTab
  tab=_tab
  viewport=_viewport
  onSelect=onSelect
  closeClickedTab=(action 'closeClickedTab')
}}

{{#if isMoreTabVisible}}
  {{to-elsewhere
    named=targetOutlet
    send=(component 'frost-detail-tabs-more-tabs'
      hook=(concat hookPrefix '-tabs')
      tabs=_tabs
      onSelect=onSelect
      isAccordianMenu=isAccordianMenu
    )
  }}
{{/if}}
